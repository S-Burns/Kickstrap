include _header

.container
	section.row(ng-controller='k$.featureCtrl')
		div.col.col-sm-3
			h1 Kickstrap
			p.lead New in 2.0
			article.panel
				.panel-heading 
					input.form-control(type='text', ng-model='featureInput', placeholder="Search Features")
				.list-group
					a(ng-href='{{"#"}}{{slug(feature.name)}}').list-group-item(ng-repeat='feature in features | filter: featureInput') {{feature.name}}
		div.col.col-sm-9
			article.panel(ng-repeat='feature in features | filter: featureInput')
				.panel-heading(ng-id='slug(feature.name)') 
					.panel-title {{feature.name}} - {{feature.summary}}
				p {{feature.description}}
				.panel-footer(ng-show="feature.learnMore") Learn more at 
					a(ng-href='feature.learnMore.link') {{feature.learnMore.title}}