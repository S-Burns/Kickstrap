!!!
html(lang='en')
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no")
    meta(name='description', content='The Elegant Frontend Framework')
    meta(name='author', content= 'Adam Kochanowicz')
    script(src='https://jspm.io/loader.js')
    script(src="//cdn.firebase.com/v0/firebase.js")
    script(src='js/settings.js')
    script(src='js/kickstrap.js')
    :coffeescript
      a = document.createElement 'link'
      a.rel = 'stylesheet'
      if k$.settings.theme == 'bootstrap'
        a.href="https://github.jspm.io/twbs/bootstrap@3.0.2/css/bootstrap.css"
      else
        a.href= 'themes/' + k$.settings.theme + '.css'
      document.head.appendChild a
    title #{title}
    link(rel="stylesheet", href="css/kickstrap.css")
  body
    #sf-wrap
      block content
      #sf-push
    section#sf-footer.navbar.navbar-default
      .container
        ul.nav.navbar-nav
          li
            a(href="#") &copy; #{yourname}
        ul.nav.navbar-nav.pull-right
          li
            a(href="http://getkickstrap.com") Powered by Kickstrap
    
    :coffeescript
      k$.ready ->  
        $.growl
          title: 'Alpha 1 of 2'
          text: '<br>This is one of two alpha releases. Two betas and two release candidates will be released as well before the final release on February 14, 2014'
          delay: 5000
          type: 'info'

    //- this must be included for live reload to work in developement
    //- it will be automatically ignored when deployed
    != livereload