!!!
html(lang='en')
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no")
    meta(name='description', content='The Elegant Frontend Framework')
    meta(name='author', content= 'Adam Kochanowicz')
    script(src='https://jspm.io/loader.js?')
    // link(rel="stylesheet", href="https://github.jspm.io/twbs/bootstrap@3.0.2/css/bootstrap.css")
    link(rel="stylesheet", href="themes/kickstrap.css")
    link(rel="stylesheet", href="css/kickstrap.css")
    title #{title}
  body
    #sf-wrap
      block variables
      block content
      #sf-push
    section#sf-footer.navbar.navbar-inverse.navbar-static-top
      .container
        ul.nav.navbar-nav
          li
            a(href="#") &copy; #{yourname}
        ul.nav.navbar-nav.pull-right
          li

            // You're welcome to remove this logo, but we'd appreciate it if you'd link to us.
            // The more involvement from the community, the better Kickstrap works for you.

            a(href="http://getkickstrap.com") Powered by 
              span.kickstrap-logo Kickstrap

    script(src="//cdn.firebase.com/v0/firebase.js")
    script(src='js/kickstrap.js')
    :coffeescript
      k$.ready ->  
        $.growl
          title: 'Alpha 2 of 2'
          text: '<br>This is the last of two alpha releases. Two betas and two release candidates will be released as well before the final release on February 14, 2014'
          delay: 5000
          type: 'info'
        jspm.import 'ks:advertisements'
        k$.demoStylesheet = () -> $('#main-stylesheet').remove()
