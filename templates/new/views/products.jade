extends layout

block variables
	- var active = 'products'

block content
	include _header

	.container(ng-controller='ProductsCtrl')
		.row
			.col-sm-12
				h1 On Sale Now
				p.lead Get them before they're gone
		.row
			div.col-sm-3
				article.panel.panel-default
					.panel-heading 
						input.form-control(type='text', ng-model='productInput', placeholder='Search products')
					.list-group.ks-beforeload
						p.list-group-item Loading...
					.list-group.ks-afterload
						a.list-group-item(
							ng-href='{{"#"}}{{slug(product.name)}}'
							ng-repeat='product in products | filter:productInput | orderByPriority'
							ng-click="setSelectedProduct(product)"
							ng-class="{'active': selectedProduct.id == product.id }"
						) {{product.name}}

			div.col-sm-9.ks-afterload
				.carousel.slide#featured(data-ride="carousel")
					ol.carousel-indicators
						li.active(data-target="#featured", data-slide-to="0")
						li(data-target="#featured", data-slide-to="{{$index+1}}", ng-repeat="product in products | orderByPriority")
					.carousel-inner(ng-if="product.featured")
						.item.active(style="max-height: 450px")
							img(src="http://images.weserv.nl/?url=upload.wikimedia.org/wikipedia/commons/c/cc/Le_garcon_et_la_ville.JPG&w=1000&t=fitup")
							.carousel-caption
								h3 Check out our summer deals
						.item(ng-repeat="product in products", style="max-height: 450px")
							img(ng-src="http://images.weserv.nl/?url=upload.wikimedia.org/wikipedia/commons/{{product.img}}&w=1000&t=fitup")
							.carousel-caption
								h3 
									{{product.name}}
								p {{product.desc}}
								p 
									a.btn.btn-default(href="cart.html") 
										span.glyphicon.glyphicon-shopping-cart
										|  Add to cart
					a.left.carousel-control(href="#featured", data-slide="prev")
						span.glyphicon.glyphicon-chevron-left
					a.right.carousel-control(href="#featured", data-slide="next")
						span.glyphicon.glyphicon-chevron-right
				br
				.row
					.col-sm-4(ng-repeat='product in products | limitTo: 3 | orderByPriority')
						img.img-circle.center-block(ng-src="http://images.weserv.nl/?url=upload.wikimedia.org/wikipedia/commons/{{product.img}}&h=400&w=400&t=square" style="width: 200px")
						h4.center-block(ng-id='slug(product.name)') {{product.name}}
						p {{product.desc}}

				hr
				.center-block#ads
				hr
				include _pagination
				hr



				hr
				include _pagination
block foot
	include _example-growl