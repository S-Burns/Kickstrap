extends layout

block content
	include _header

	.container
		section.row(ng-controller='SectionsCtrl')
			.col.col-sm-12
				h1 #{title}
				p.lead New in 2.0
			.col.col-sm-3
				article.panel.panel-default
					.panel-heading 
						input.form-control(type='text', ng-model='sectionInput', placeholder='Search Sections', ng-change="setSelectedSection(filteredSections[0])")
					.list-group.ks-beforeload
						li.list-group-item Loading...
					.list-group.ks-afterload
						a.list-group-item(
							ng-repeat='section in (filteredSections = (sections | filter: sectionInput))'
							ng-click="setSelectedSection(section)"
							ng-class="{'active': selectedSection == section }"
						) {{section.name}}

			.col.col-sm-9(ng-view)
			.col.col-sm-9(ng-hide="{{selectedSection.length}}")
				p
					em.text-muted
						span.hidden-xs Select an article to read from the left.
						span.visible-xs Select an article to read above.
