include _header

.container
	section.row(ng-controller='FeaturesCtrl')
		div.col.col-sm-3
			h1 #{title}
			p.lead New in 2.0
			article.panel.panel-default
				.panel-heading 
					input.form-control(type='text', ng-model='featureInput', placeholder='Search Features')
				.list-group.ks-beforeload
					li.list-group-item Loading...
				.list-group.ks-afterload
					a.list-group-item(
						ng-href='{{"#"}}{{slug(feature.name)}}', ng-repeat='feature in features | filter: featureInput'
						ng-click="setSelectedFeature(feature)"
						ng-class="{'active': selectedFeature.id == feature.id }"
					) {{feature.name}}

		div.col.col-sm-9
			.panel.panel-default.ks-beforeload 
				.panel-body Loading...
			article.panel.panel-default.ks-afterload(ng-repeat='feature in features | filter: featureInput')
				.panel-body
					p.lead(ng-id='slug(feature.name)') {{feature.name}} - {{feature.summary}}
					p {{feature.description}}
				.panel-footer(ng-show="feature.learnMore") 
					small
						em.text-muted Learn more at 
							a(ng-href='{{feature.learnMore.link}}') {{feature.learnMore.title}}